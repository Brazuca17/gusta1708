<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gusta1708.MainPage"
             Shell.NavBarIsVisible="False">

         <Grid>
       <Grid.RowDefinition>
          <RowDefinition Height="60"/>
          <RowDefinition Height="60"/>
          <RowDefinition Height="60"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="60"/>
          <RowDefinition Height="60"/>
         </Grid.RowDefinition>

       <Grid.columnDefinition>
          <columnDefinition Width="60">
          <columnDefinition Width="60">
          <columnDefinition Width="60">
          <columnDefinition Width="60">
          <columnDefinition Width="60">
       </Grid.columnDefinition>

       <Image x:Name="TrocaImageFundo"
              Grid.RowSpam=6
              Grid.ColumnSpan="5"/>
              

       <Image x:Name="Imgdosbicho"
              Grid.Row="3"
              Grid.ColumnSpan="5"/>
  
       <Frame    BackgroundColor="#3a3eba"
                 CornerRadius="20"
                 WidthRequest="200"
                 Opacity=".6"
                 BorderThickness="2" 
                 BorderColor="Black"
                 Grid.ColumnSpan="5"
                 Grid.RowSpan="3">

              <Image Source="pizza.png"
                     Grid.Row="0"
                     Grid.Column="0"/>

              <Image Source="agua.png"
                     Grid.Row="1"
                     Grid.Column="0"/>

               <Image Source="bola.png"
                      Grid.Row="2"
                      Grid.Column="0"/>
                            
              <ProgressBar x:Name="ProgressoFome"
                           ProgressColor="#d13646"
                           Width="100"
                           Height="20"
                           Grid.Row="0"
                           Grid.ColumnSpan="5"/>

              <ProgressBar x:Name="ProgressoSede"
                           ProgressColor="#42ddfc"
                           Width="100"
                           Height="20"
                           Grid.Row="1"
                           Grid.ColumnSpan="5"/>

              <ProgressBar x:Name="ProgressoBrinca"
                           ProgressColor="#303332"
                           Width="100"
                           Height="20"
                           Grid.Row="2"
                           Grid.ColumnSpan="5"/>           

       </Frame>     


       <Frame    BackgroundColor="#3a3eba"
                 CornerRadius="20"
                 WidthRequest="200"
                 BorderThickness="2" 
                 BorderColor="Black"
                 Grid.Row="4"
                 Grid.ColumnSpan="5">

              <Button Source="pizza.png"
                      Clicked="AumentaFome"
                      Grid.Row="4"
                      Grid.Column="1"/>


              <Button Source="Agua.png"
                      Clicked="AumentaSede" 
                      Grid.Row="4"
                      Grid.Column="2"/>

              <Button Source="bola.png"
                      Clicked="AumentaBrinca"
                      Grid.Row="4"
                      Grid.column="3"/>    
       </Frame>  

               <Button Source="seta.png"
                       Clicked="TrocaPronagem"
                       HeightRequest="50"
                       CornerRadius="25"
                       BackgroundColor="#ffab8f"
                       Grid.Row="4"
                       Grid.Column="4"/>

               <Button Source="setaesquerda.png"
                       Clicked="TrocaImageFundo"
                       HeightRequest="50"
                       CornerRadius="25"
                       BackgroundColor="#ffab8f"
                       Grid.Row="4"
                       Grid.Column="0"/>

                       
         </Grid>
</ContentPage>
